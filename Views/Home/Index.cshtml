@using System.Security.Principal
@model PagedResults<ContactsListViewModel>
@{

    int viewoption = 1;
    viewoption = (int)ViewData["View_Option"];

    string title = ViewBag.Title;
    string subtitle = ViewBag.SubTitle;
    string user = ViewBag.UserAD;
}

<div class="ms-hero-page-override ms-hero-img-city2 ms-hero-bg-light-light">
    <div class="container">
        <div class="text-center">
            <h1 class="no-m ms-site-title color-white center-block ms-site-title-lg mt-2 animated zoomInDown animation-delay-5"> @title</h1>
            <h5 class="text-normal animated fadeInUp animation-delay-4">@subtitle</h5>
            <h6 class="text-normal">Hello @ViewBag.UserAD</h6>
        </div>
        <div class="row">
            <div class="col-md-5">

            </div>
            <div class="col-md-2">
                <a asp-controller="Home" asp-action="New" class="btn-circle btn-circle-raised btn-circle-white" title="Add New Contact"><i class="fa fa-plus"></i></a>
            </div>
            <div class="col-md-5">

            </div>
        </div>
        <br />
        <div class="row">

            @if (Model.Items.Any())
            {
                var index = 1;
                @foreach (var item in Model.Items)
                {


                    if (index % 2 == 0)
                    {

                        <div class="col-md-4">
                            <div class="card animated fadeInUp animation-delay-7">
                                <div class="ms-hero-bg-primary ms-hero-img-coffee">
                                    <h3 class="color-white index-1 text-center no-m pt-4">@item.ContactName</h3>
                                    <div class="color-white index-1 text-center np-m">
                                        <p class="color-white">
                                            @item.Firm
                                        </p>
                                    </div>

                                </div>
                                <div class="card-body pt-4 text-center">
                                    <p class="color-dark">
                                        @item.Source
                                    </p>
                                    <br />
                                    <table id="data-table-default" class="table table-striped table-bordered">
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-face mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="color-info"> @item.ContactName</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-star mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.PracticeArea
                                                </p>

                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-check mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.PQE
                                                </p>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-city mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.Location
                                                </p>

                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-link mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.MatterNo
                                                </p>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-calendar mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.CreatedOn.ToShortDateString()
                                                    @@
                                                    @item.CreatedOn.ToShortTimeString()
                                                </p>

                                            </td>
                                        </tr>
                                    </table>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" title="Edit Contact" class="btn-circle btn-circle-raised btn-circle-xs mt-1 mr-1 no-mr-md btn-circle-warning">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" title="Delete Contact" class="btn-circle btn-circle-raised btn-circle-xs mt-1 mr-1 no-mr-md btn-circle-danger">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                </div>

                            </div>

                        </div>


                    }
                    else
                    {

                        <div class="col-md-4">
                            <div class="card animated fadeInUp animation-delay-7">
                                <div class="ms-hero-bg-dark-light ms-hero-img-meeting">
                                    <h3 class="color-white index-1 text-center no-m pt-4">@item.ContactName</h3>
                                    <div class="color-white index-1 text-center np-m">
                                        <p class="color-white">
                                            @item.Firm
                                        </p>
                                    </div>

                                </div>
                                <div class="card-body pt-4 text-center">
                                    <p class="color-dark">
                                        @item.Source
                                    </p>
                                    <br />
                                    <table id="data-table-default" class="table table-striped table-bordered">
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-face mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="color-info"> @item.ContactName</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-star mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.PracticeArea
                                                </p>

                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-check mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.PQE
                                                </p>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-city mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.Location
                                                </p>

                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-link mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.MatterNo
                                                </p>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>
                                                <i class="zmdi zmdi-calendar mr-1 color-dark"></i>
                                            </th>
                                            <td align="left">
                                                <p class="color-dark">
                                                    @item.CreatedOn.ToShortDateString()
                                                    @@
                                                    @item.CreatedOn.ToShortTimeString()
                                                </p>

                                            </td>
                                        </tr>
                                    </table>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" title="Edit Contact" class="btn-circle btn-circle-raised btn-circle-xs mt-1 mr-1 no-mr-md btn-circle-warning">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" title="Delete Contact" class="btn-circle btn-circle-raised btn-circle-xs mt-1 mr-1 no-mr-md btn-circle-danger">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                </div>

                            </div>

                        </div>

                    }

                    index++;
                }


            }


        </div>

        @if (Model.Items.Any())
        {
            
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pager-primary">
                            <li class="page-item @prevDisabled">
                                <a asp-controller="Home" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-search="@ViewBag.SearchInput" class="page-link" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <span>@Model.PageIndex of @Model.TotalPages</span>                
                            </li>
                            <li class="page-item @nextDisabled">
                                <a asp-controller="Home" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-search="@ViewBag.SearchInput" class="page-link" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>


        }

    </div>
</div>

